<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cosmic Translator</title>
    <link rel="stylesheet" href="/css/translate.css">
</head>
<body>
    <div class="stars">
        <!-- Stars will be created by CSS -->
    </div>

    <div class="container">
        <header>
            <div class="logo">
                <svg class="star-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 3a.75.75 0 01.75.75v1.5a.75.75 0 01-1.5 0v-1.5A.75.75 0 0112 3zm0 13.5a.75.75 0 01.75.75v1.5a.75.75 0 01-1.5 0v-1.5a.75.75 0 01.75-.75zM18.75 12a.75.75 0 00-.75-.75h-1.5a.75.75 0 000 1.5h1.5a.75.75 0 00.75-.75zM5.25 12a.75.75 0 00-.75-.75H3a.75.75 0 000 1.5h1.5a.75.75 0 00.75-.75zm.97-7.78a.75.75 0 011.06 0l1.5 1.5a.75.75 0 01-1.06 1.06l-1.5-1.5a.75.75 0 010-1.06zm12.28 12.28a.75.75 0 00-1.06-1.06l-1.5 1.5a.75.75 0 101.06 1.06l1.5-1.5zm-13.34 1.5a.75.75 0 001.06-1.06l-1.5-1.5a.75.75 0 10-1.06 1.06l1.5 1.5zm12.28-12.28a.75.75 0 00-1.06-1.06l-1.5 1.5a.75.75 0 001.06 1.06l1.5-1.5z"/>
                </svg>
                <h1>Cosmic Translator</h1>
                <svg class="star-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 3a.75.75 0 01.75.75v1.5a.75.75 0 01-1.5 0v-1.5A.75.75 0 0112 3zm0 13.5a.75.75 0 01.75.75v1.5a.75.75 0 01-1.5 0v-1.5a.75.75 0 01.75-.75zM18.75 12a.75.75 0 00-.75-.75h-1.5a.75.75 0 000 1.5h1.5a.75.75 0 00.75-.75zM5.25 12a.75.75 0 00-.75-.75H3a.75.75 0 000 1.5h1.5a.75.75 0 00.75-.75zm.97-7.78a.75.75 0 011.06 0l1.5 1.5a.75.75 0 01-1.06 1.06l-1.5-1.5a.75.75 0 010-1.06zm12.28 12.28a.75.75 0 00-1.06-1.06l-1.5 1.5a.75.75 0 101.06 1.06l1.5-1.5zm-13.34 1.5a.75.75 0 001.06-1.06l-1.5-1.5a.75.75 0 10-1.06 1.06l1.5 1.5zm12.28-12.28a.75.75 0 00-1.06-1.06l-1.5 1.5a.75.75 0 001.06 1.06l1.5-1.5z"/>
                </svg>
            </div>
            <p class="subtitle">Translate across the universe</p>
        </header>

        <main class="translator-card">
            <form id="translation-form">
                <div class="input-section">
                    <textarea 
                        placeholder="Enter your message to the stars..."
                        id="text"
                    ></textarea>
                </div>

                <div class="language-selection">
                    <div class="select-wrapper">
                        <label for="sourceLang">Source Language</label>
                        <select id="sourceLang">
                            <option value="en">English</option>
                            <option value="ml">Malayalam</option>
                            <option value="hi">Hindi</option>
                            <option value="ta">Tamil</option>
                            <option value="te">Telugu</option>
                            <option value="kn">Kannada</option>
                            <option value="es">Spanish</option>
                            <option value="fr">French</option>
                            <option value="de">German</option>
                            <option value="zh">Chinese (Simplified)</option>
                            <option value="ja">Japanese</option>
                            <option value="ko">Korean</option>
                            <option value="ru">Russian</option>
                            <option value="ar">Arabic</option>
                            <option value="it">Italian</option>
                            <option value="pt">Portuguese</option>
                            <option value="bn">Bengali</option>
                            <option value="pa">Punjabi</option>
                            <option value="ur">Urdu</option>
                            <option value="gu">Gujarati</option>
                            <option value="mr">Marathi</option>
                            <option value="sw">Swahili</option>
                            <option value="tr">Turkish</option>
                            <option value="vi">Vietnamese</option>
                            <option value="th">Thai</option>
                            <option value="nl">Dutch</option>
                            <option value="pl">Polish</option>
                            <option value="sv">Swedish</option>
                            <option value="el">Greek</option>
                            <option value="cs">Czech</option>
                            <option value="hu">Hungarian</option>
                            <option value="fi">Finnish</option>
                            <option value="no">Norwegian</option>
                            <option value="da">Danish</option>
                        </select>
                    </div>

                    <div class="select-wrapper">
                        <label for="targetLang">Target Language</label>
                        <select id="targetLang">
                            <option value="en">English</option>
                            <option value="ml">Malayalam</option>
                            <option value="hi">Hindi</option>
                            <option value="ta">Tamil</option>
                            <option value="te">Telugu</option>
                            <option value="kn">Kannada</option>
                            <option value="es">Spanish</option>
                            <option value="fr">French</option>
                            <option value="de">German</option>
                            <option value="zh">Chinese (Simplified)</option>
                            <option value="ja">Japanese</option>
                            <option value="ko">Korean</option>
                            <option value="ru">Russian</option>
                            <option value="ar">Arabic</option>
                            <option value="it">Italian</option>
                            <option value="pt">Portuguese</option>
                            <option value="bn">Bengali</option>
                            <option value="pa">Punjabi</option>
                            <option value="ur">Urdu</option>
                            <option value="gu">Gujarati</option>
                            <option value="mr">Marathi</option>
                            <option value="sw">Swahili</option>
                            <option value="tr">Turkish</option>
                            <option value="vi">Vietnamese</option>
                            <option value="th">Thai</option>
                            <option value="nl">Dutch</option>
                            <option value="pl">Polish</option>
                            <option value="sv">Swedish</option>
                            <option value="el">Greek</option>
                            <option value="cs">Czech</option>
                            <option value="hu">Hungarian</option>
                            <option value="fi">Finnish</option>
                            <option value="no">Norwegian</option>
                            <option value="da">Danish</option>
                        </select>
                    </div>
                </div>

                <button type="submit" class="translate-button">
                    <span>Translate</span>
                </button>
            </form>

            <div class="output-section" id="output-section" style="display: none;">
                <h2>Translated Message</h2>
                <div class="translated-text">
                    <p id="output"></p>
                </div>
            </div>
        </main>
    </div>
    <script>
        document.getElementById('translation-form').addEventListener('submit', async (e) => {
            e.preventDefault();

            const text = document.getElementById('text').value;
            const sourceLang = document.getElementById('sourceLang').value;
            const targetLang = document.getElementById('targetLang').value;
            const outputSection = document.getElementById('output-section');
            const outputText = document.getElementById('output');

            // Reset output area
            outputSection.style.display = 'none';
            outputText.innerText = 'Translating...';

            try {
                const response = await fetch('/translate', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        text: text,
                        sourceLang: sourceLang,
                        targetLang: targetLang,
                    }),
                });

                const result = await response.json();

                if (response.ok) {
                    outputText.innerText = result.translatedText;
                } else {
                    outputText.innerText = 'Error: ' + result.error;
                }
                outputSection.style.display = 'block';
            } catch (error) {
                outputSection.style.display = 'block';
                outputText.innerText = 'Translation failed. Please try again.';
            }
        });

        // Create animated stars background
        const stars = document.querySelector('.stars');
        for (let i = 0; i < 50; i++) {
            const star = document.createElement('div');
            star.className = 'star';
            star.style.top = Math.random() * 100 + '%';
            star.style.left = Math.random() * 100 + '%';
            star.style.animationDuration = (Math.random() * 3 + 2) + 's';
            star.style.animationDelay = Math.random() * 5 + 's';
            stars.appendChild(star);
        }
    </script>
</body>
</html>
