<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/practice.css"> 
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  
     <!-- Favicon -->
     <link href="/img/favicon.ico" rel="icon">

     <!-- Google Web Fonts -->
     <link rel="preconnect" href="https://fonts.googleapis.com">
     <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
     <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">
 
     <!-- Icon Font Stylesheet -->
     <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
 
     <!-- Libraries Stylesheet -->
     <link href="/lib/animate/animate.min.css" rel="stylesheet">
     <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
 
     <!-- Customized Bootstrap Stylesheet -->
     <link href="/css/bootstrap.min.css" rel="stylesheet">
 
     <!-- Template Stylesheet -->
     <link href="/css/style.css" rel="stylesheet">
   
  <title>Quiz Topic Selection</title>

  <title>Quiz Generator</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.0.0/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/lucide-icons@0.0.129/dist/lucide.min.css" rel="stylesheet">
  <link href="/css/practice.css" rel="stylesheet">
</head>
<body>
  <div class="animated-background"></div> <!-- Background that moves continuously -->

  <div class="content-wrapper">
    <h1 class="title">
      Quiz Generator
    </h1>
    <p class="description">
      Create your own custom quiz adventure
    </p>

    <!-- Card Component -->
     <form id="topicForm" action="/practice" method="POST">
    <div class="card">
      <input
        id="quizTopic"
        placeholder="Enter topic for your quiz..."
        class="input"
        name="topic"
      />
      <button
        id="submitButton"
        class="button"
      >
        Generate Quiz
        <i class="lucide-arrow-right" style="width: 24px; height: 24px;"></i>
      </button>
    </div>
      </form>

    <!-- Decorative glowing orbs -->
    <div class="glowing-orb bg-purple-900/20 w-96 h-96 -ml-48 -mb-48" style="bottom: 0; left: 0;"></div>
    <div class="glowing-orb bg-pink-900/20 w-96 h-96 -mr-48 -mt-48" style="top: 0; right: 0;"></div>
  </div>

  <script>
    // Handle button click
    const submitButton = document.getElementById("submitButton");
    const quizTopicInput = document.getElementById("quizTopic");

    submitButton.addEventListener("click", () => {
      const customTopic = quizTopicInput.value;
      console.log('Custom topic:', customTopic);
    });
  </script>
</body>
</html>